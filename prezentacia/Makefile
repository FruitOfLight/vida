sources=$(wildcard tex/*.tex) $(wildcard *.tex) $(wildcard img/*) Makefile

default: main.pdf

main.pdf: $(sources)
	(echo '% this is an autogenerated file' ; ls tex/*.tex | sed -e 's/\(.*\)/\\input \1 \\vfill\\eject/') > tex/zoznam
	pdfcslatex main
	pdfcslatex main

clean:
	rm -f main.pdf *.log *.aux

